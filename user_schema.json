{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "users": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "birthday": {
            "type": "string",
            "format": "date-time",
            "description": "The user's birthday stored as a Firestore timestamp."
          },
          "created_time": {
            "type": "string",
            "format": "date-time",
            "description": "The time the user was created in the database."
          },
          "display_name": {
            "type": "string",
            "description": "The user's display name."
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "The user's email address."
          },
          "uid": {
            "type": "string",
            "description": "The unique identifier for the user."
          }
        },
        "required": ["uid", "email", "display_name", "created_time", "birthday"]
      }
    }
  }
}
